$(document).ready(function(){

	
	
    $('.member').click(function(){
        var submenu = $(this).next("ul");
        if(submenu.is(":visible")) {
            submenu.slideUp();
            $('.o1').css('color', 'black');
            $('.o1').text('▼');
        } else {
            submenu.slideDown();
            $('.o1').css('color', 'rgb(231, 60, 63)');
            $('.o1').text('▲');
        }
    });

    $('.activity').click(function(){
        var submenu = $(this).next("ul");
        if(submenu.is(":visible")) {
            submenu.slideUp();
            $('.o2').css('color', 'black');
            $('.o2').text('▼');
        } else {
            submenu.slideDown();
            $('.o2').css('color', 'rgb(231, 60, 63)');
            $('.o2').text('▲');
        }
    });

